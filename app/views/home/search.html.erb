<!-- A query was attempted -->
<% if params.has_key?(:location) %>
	<% @query = search_params(params)["businesses"] %>
	<!-- No results -->
	<% if @query == nil %>
		<%= render 'invalid' %>
	<% elsif @query != nil %>
		<% @results = @query %>
		<% if @results != nil %>
			<%= render 'results' %>
		<% else %>
			<%= render 'invalid' %>
		<% end %>
	<% end %>

<!-- Fill out a form -->
<% else %>
	<%= render 'form' %>
<% end %>
